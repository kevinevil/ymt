    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link href="css/common/global.css" type="text/css" rel="stylesheet">
    <link href="css/common/indiv.css" type="text/css" rel="stylesheet">
    <link href="css/common/salad.css" type="text/css" rel="stylesheet">
    <link href="css/lib/jquery.bxslider.css" type="text/css" rel="stylesheet">
</head>
<body>
<div class="banner-area">
    <ul class="bxslider">
        <li class="product-img"><a><img class="first" src="images/salads/salad_1.JPG"></a></li>
        <li><a><img src="images/salads/salad_4.JPG"></a></li>
        <li><a><img src="images/salads/salad_5.JPG"></a></li>
    </ul>
</div>
<div class="detail-area">
